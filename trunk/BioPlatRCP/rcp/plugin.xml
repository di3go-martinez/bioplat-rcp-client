<?eclipse version="3.0"?>
<plugin>
   <extension
         id="id1"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="edu.unlp.medicine.bioplat.rcp.application.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="edu.unlp.medicine.bioplat.rcp.application.startup.LoadBasicData"></startup>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="edu.unlp.medicine.bioplat.rcp.application.BioPlatPerspective"
            id="bioplatrcp.perspective"
            name="BioPlat Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="edu.unlp.medicine.bioplat.rcp.ui.biomarker.editors.BiomarkerEditor"
            contributorClass="edu.unlp.medicine.bioplat.rcp.ui.biomarker.contributor.BiomarkerEditorContributor"
            default="false"
            icon="resources/icons/biomarker.PNG"
            id="bio.plat.biomarker.editor"
            name="%editor.name">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="bio.plat.rcp.actionSet1"
            label="%actionSet.label"
            visible="true">
         <menu
               id="bio.plat.rcp.biomarker.menu"
               label="%menu.label">
            <separator
                  name="bio.plat.rcp.biomarker.menu.separator">
            </separator>
         </menu>
         <action
               class="edu.unlp.medicine.bioplat.rcp.ui.biomarker.actions.OpenBiomarkerAction"
               icon="resources/icons/newBiomarker.PNG"
               id="bio.plat.rcp.biomarker.actions.new"
               label="%new.action.label"
               menubarPath="bio.plat.rcp.biomarker.menu/bio.plat.rcp.biomarker.menu.separator"
               style="push">
         </action>
         <action
               class="edu.unlp.medicine.bioplat.rcp.ui.genes.acions.AddGeneAction"
               id="bio.plat.rcp.biomarker.actions.gen.add"
               label="Agregar gen"
               style="push">
         </action>
      </actionSet>
      
   </extension>
   <extension
         point="org.eclipse.ui.exportWizards">
      <category
            id="edu.medicine.bioplat.rcp.export.biomarker.root"
            name="Biomarker exports">
      </category>
      <category
            id="cat2"
            name="To"
            parentCategory="edu.medicine.bioplat.rcp.export.biomarker.root">
      </category>
      <wizard
            category="edu.medicine.bioplat.rcp.export.biomarker.root/cat2"
            class="edu.unlp.medicine.bioplat.rcp.ui.biomarker.exports.ExportGeneList"
            id="edu.medicine.bioplat.rcp.export.biomarker.geneList"
            name="Export Gene List">
         <description>
            Exportaci√≥n de la lista de genes de un biomarcador
         </description>
      </wizard>
      <wizard
            category="edu.medicine.bioplat.rcp.export.biomarker.root/cat2"
            class="edu.unlp.medicine.bioplat.rcp.ui.biomarker.exports.ExportToFile"
            id="edu.medicine.bioplat.rcp.export.biomarker.file"
            name="Export to file">
      </wizard>
   </extension>
      <extension
      point="org.eclipse.ui.views">
   <view
         name="Progress View"
         category="org.eclipse.ui"
         class="org.eclipse.ui.ExtensionFactory:progressView"
         id="org.eclipse.ui.views.ProgressView">
   </view>
</extension>
</plugin>
